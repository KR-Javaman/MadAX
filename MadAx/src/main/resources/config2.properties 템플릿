#오라클 DB 연결 정보
spring.datasource.hikari.driver-class-name=oracle.jdbc.driver.OracleDriver
spring.datasource.hikari.jdbc-url=
spring.datasource.hikari.username=
spring.datasource.hikari.password=

# HikariCP Connection Pool Properties
#풀이 연결을 사용할 수 있을 때까지 대기하는 최대 시간(ms)을 지정
spring.datasource.hikari.connection-timeout=30000

#풀의 최대 연결 수 설정
#(프로젝트 최종본 30으로 지정)
spring.datasource.hikari.maximum-pool-size=5

#연결이 풀에서 유휴 상태로 있을 수 있는 최대 시간(ms)을 지정
spring.datasource.hikari.idle-timeout=600000

#연결 풀의 이름을 지정
spring.datasource.hikari.pool-name=MyHikariCP

#자동 커밋 끄기
spring.datasource.hikari.auto-commit=false





#이메일 인증
spring.mail.username=이메일
spring.mail.password=발급받은 앱 비밀번호



#나만의 파일 저장 경로 지정(절대 경로만 가능!)

my.images.connectpath=
my.images.resourcepath=
my.images.location=

#회원(프로필이미지) 저장 경로
my.member.location=
my.member.webpath=

#게시판 이미지 저장 경로
my.board.location=
my.board.webpath=

my.jisik.location=
my.jisik.webpath=



my.background.location=
my.background.webpath=

#쇼츠게시판 비디오 저장 경로
my.video.location=
my.video.webpath=
#my.video.resourcepath=

## ffmpeg 설정

ffmpeg.location=
ffprobe.location=



spring.servlet.multipart.location=





# 파일을 디스크에 쓸 때까지의 임계값
# 기본값: 0B
# 52,428,800 == 50MB
spring.servlet.multipart.file-size-threshold = 52428800

# 개별 파일당 최대 크기
# 기본값: 1MB
# 10,485,760 == 10MB
spring.servlet.multipart.max-file-size = 10485760

# HTTP 요청당 최대 크기
# 기본값: 10MB
# 52,428,800 == 50MB
spring.servlet.multipart.max-request-size = 52428800
