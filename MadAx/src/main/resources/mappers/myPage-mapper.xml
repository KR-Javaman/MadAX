<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<!-- 연결할 인터페이스의 패키지명.인터페이스명으로 작성 -->
<mapper namespace="com.javaman.madax.myPage.model.mapper.MyPageMapper">
	
	<resultMap id="board_rm" type="Board">

		<id property="boardNo" column="BOARD_NO"/>

		<collection property="commentList"
					select="selectCommentList"
					column="BOARD_NO"
					javaType="java.util.ArrayList"
					ofType="Comment"
					/>
					
		<collection property="imageList" 
               select="selectImageList" 
               column="BOARD_NO"
               javaType="java.util.ArrayList"
               ofType="BoardImg" />			
					
	</resultMap>
	
	  
	
  	<!--게시글 조회-->
 	<select id="selectCommunity" resultType="Board">
		SELECT CATEGORY_NAME, CATEGORY_NAME_TWO,BOARD_TITLE, TO_CHAR(WRITE_DATE, 'YYYY-MM-DD') AS WRITE_DATE
		FROM "BOARD" B
		JOIN "MEMBER" USING(MEMBER_NO)
		JOIN "BOARD_TYPE" USING(BOARD_CODE)
		JOIN "CATEGORY_TYPE" USING(BOARD_CODE)
		JOIN "CATEGORY_TYPE_TWO" USING(CATEGORY_CODE_TWO)
		WHERE MEMBER_NO = #{memberNo}
		AND BOARD_DEL_FL = 'N'
		AND BOARD_CODE = 1
		ORDER BY WRITE_DATE DESC
	</select>
	
	 	<!--게시글 조회-->
 	<select id="selectJisikin" resultType="Board">
		SELECT CATEGORY_NAME, CATEGORY_NAME_TWO,BOARD_TITLE, TO_CHAR(WRITE_DATE, 'YYYY-MM-DD') AS WRITE_DATE
		FROM "BOARD" B
		JOIN "MEMBER" USING(MEMBER_NO)
		JOIN "BOARD_TYPE" USING(BOARD_CODE)
		JOIN "CATEGORY_TYPE" USING(BOARD_CODE)
		JOIN "CATEGORY_TYPE_TWO" USING(CATEGORY_CODE_TWO)
		WHERE MEMBER_NO = #{memberNo}
		AND BOARD_DEL_FL = 'N'
		AND BOARD_CODE = 2
		ORDER BY WRITE_DATE DESC
	</select>
	
	
	
	
	<!-- 닉네임 변경 -->
	<update id="changeNickname">
		UPDATE "MEMBER" SET
		MEMBER_NICKNAME = #{memberNickname}
		WHERE MEMBER_NO = #{memberNo}
	</update>
	
	<!-- 비밀번호 조회 -->
	<select id="selectMemberPw" resultType="string">
		SELECT MEMBER_PW
		FROM "MEMBER"
		WHERE MEMBER_NO= #{memberNo}
	</select>

	<!-- 비밀번호 변경 -->	
	<update id="changePw">
		UPDATE "MEMBER" SET
		MEMBER_PW = #{newPw}
		WHERE MEMBER_NO = #{memberNo}
	</update>
	
	<!-- 회원 탈퇴-->
	<update id="secession2">
		UPDATE "MEMBER" SET
		MEMBER_DEL_FL = 'Y'
		WHERE MEMBER_NO = #{memberNo}
	</update>
	
	<!-- 프로필 이미지 수정 -->
	<update id="profile">
		UPDATE "MEMBER" SET
		PROFILE_IMG = #{profileImg}
		WHERE MEMBER_NO = #{memberNo}
	</update>
	
	<!-- 백그라운드 이미지 수정 -->
	<update id="background">
		UPDATE "MEMBER" SET
		BACKGROUND_IMG = #{backgroundImg}
		WHERE MEMBER_NO = #{memberNo}
	</update>

		<!-- 백그라운드 이미지 삭제 -->
	<update id="deleteBackground">
		UPDATE "MEMBER" SET
		BACKGROUND_IMG = ''
		WHERE MEMBER_NO = #{memberNo}
	</update>

</mapper>